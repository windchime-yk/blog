---
import type { CollectionEntry } from "astro:content";
import { FaClockRotateLeft, FaPen } from "react-icons/fa6";
import Layout from "layouts/Layout.astro";
import FormattedDate from "components/FormattedDate.astro";
import Tags from "components/Tags.tsx";

type Props = CollectionEntry<"blog">["data"];

const { title, description, publish_date, updated_date, tags } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="dark:bg-slate-800 pt-5 pb-20 px-5 rounded">
    <div>
      <h1 class="text-4xl font-bold">{title}</h1>

      <div class="flex flex-col gap-2 mt-2 ml-2">
        <div class="flex items-center gap-2">
          <div class="flex items-center gap-1">
            <FaPen />
            <FormattedDate date={publish_date} />
          </div>
          {
            updated_date && (
              <div class="flex items-center gap-1">
                <FaClockRotateLeft />
                <FormattedDate date={updated_date} />
              </div>
            )
          }
        </div>
        <Tags tags={tags} />
      </div>
    </div>
    <slot />
  </article>
</Layout>
