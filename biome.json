{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "javascript": {
    "globals": ["Astro"]
  },
  "files": {
    "ignore": [".astro", "dist", ".flowbite-react/class-list.json"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": ["README.md"]
  }
}
